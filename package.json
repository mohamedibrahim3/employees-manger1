{
  "name": "employees-manger",
  "version": "0.1.0",
  "private": true,
  "description": "Employees manager app built with Next.js and Electron",
  "author": "Your Name or Company",
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "electron": "concurrently \"next dev -p 3001\" \"wait-on http://localhost:3001 && electron .\"",
    "electron-dev": "concurrently \"next dev -p 3001\" \"nodemon --watch main.js --exec \\\"electron .\\\"\"",
    "build-electron": "next build && electron-builder",
    "build:win": "prisma generate && next build && electron-builder --win",
    "clean": "rm -rf .next out dist node_modules"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@edgestore/react": "^0.5.3",
    "@edgestore/server": "^0.5.3",
    "@hookform/resolvers": "^5.2.1",
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/client": "^6.13.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@uploadthing/react": "^7.3.2",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lightningcss": "^1.29.0",
    "lucide-react": "^0.533.0",
    "next": "^14.2.5",
    "next-auth": "^4.24.5",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.61.1",
    "sonner": "^2.0.6",
    "sqlite3": "^5.1.6",
    "tailwind-merge": "^3.3.1",
    "uploadthing": "^7.7.3",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.14",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.2.1",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "nodemon": "^3.1.10",
    "prisma": "^6.13.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.employees.manger",
    "productName": "Employees Manager",
    "files": [
      "main.js",
      "package.json",
      "prisma/db.sqlite",
      "prisma/schema.prisma",
      "prisma/migrations/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "npmRebuild": false,
    "extraMetadata": {
      "optionalDependencies": {
        "@msgpackr-extract/msgpackr-extract-darwin-arm64": "false",
        "@msgpackr-extract/msgpackr-extract-darwin-x64": "false",
        "@msgpackr-extract/msgpackr-extract-linux-arm": "false",
        "@msgpackr-extract/msgpackr-extract-linux-arm64": "false"
      }
    }
  }
}
